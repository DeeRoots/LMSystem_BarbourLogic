@model LMS.Models.EditUserViewModel
<h2>Edit</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserNewEmail"></label>
        <input asp-for="UserNewEmail" class="form-control" />
        <span asp-validation-for="UserNewEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserNewName"></label>
        <input asp-for="UserNewName" class="form-control" />
        <span asp-validation-for="UserNewName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit User</button>
    </div>

</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}