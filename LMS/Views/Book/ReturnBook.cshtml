@model LMS.Models.ReturnBookViewModel

<table cellpadding="0" cellspacing="0">
    <tr>
        <th width="16%">Book</th>
        <th width="16%">User</th>
        <th width="16%">Leased On</th>
        <th width="16%">Return By</th>
        <th width="16%">Overdue</th>
        <th width="16%">Return</th>

    </tr>
    @if (Model.LeasedBooks.Count > 0)
    {
        @foreach (LeasedBookViewModel lease in Model.LeasedBooks)
        {
            <tr>
                <td width="16%">@lease.BookName</td>
                <td width="16%">@lease.UserLeasedName</td>
                <td width="16%">@lease.LeasedOn</td>
                <td width="16%">@lease.ReturnBy</td>
                <td width="16%">@lease.Overdue</td>
                <td width="16%" onclick="location.href='@Url.ActionLink("ProcessReturnBook", "Book", new { BookLeaseId = lease.BookLeaseId})'">Return</td>
            </tr>
        }       
    }
    else
    {
        <tr>
            <td width="16%">No Books on lease</td>
            <td width="16%"></td>
            <td width="16%"></td>
            <td width="16%"></td>
            <td width="16%"></td>
            <td width="16%"></td>
        </tr>
    }
   
</table>