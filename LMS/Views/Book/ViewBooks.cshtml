@model LMS.Models.ViewBooksViewModel

<table cellpadding="0" cellspacing="0">
    <tr>
        <th width="10%">Title</th>
        <th width="10%">Author</th>
        <th width="10%">Publisher</th>
        <th width="10%">Publication Date</th>
        <th width="10%">Category</th>
        <th width="10%">ISBN </th>
        <th width="10%">Total Copies</th>
        <th width="10%">Available Copies</th>
        <th width="10%">Edit</th>
        <th width="10%">Delete</th>
    </tr>
    @foreach (ViewBookViewModel book in Model.Books)
    {
        <tr>
            <td width="10%">@book.Title</td>
            <td width="10%">@book.Author</td>
            <td width="10%">@book.Publisher</td>
            <td width="10%">@book.PublicationDate.ToString()</td>
            <td width="10%">@book.CategoryName</td>
            <td width="10%">@book.ISBN</td>
            <td width="10%">@book.TotalCopies.ToString()</td>
            <td width="10%">@book.AvailableCopies.ToString()</td>
            <td width="10%" onclick="location.href='@Url.ActionLink("EditBook", "Book", new {ISBN = book.ISBN})'">Edit</td>
            <td width="10%" onclick="location.href='@Url.ActionLink("DeleteBook", "Book",new {ISBN = book.ISBN})'">Delete</td>
        </tr>
    }
</table>