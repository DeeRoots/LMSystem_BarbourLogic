@model LMS.Models.LeaseBookViewModel

<table cellpadding="0" cellspacing="0">
    <tr>
        <th width="12%">Title</th>
        <th width="12%">Author</th>
        <th width="12%">Publisher</th>
        <th width="12%">Publication Date</th>
        <th width="12%">Category</th>
        <th width="12%">ISBN </th>
        <th width="12%">Available Copies</th>
        <th width="12%">Lease</th>
    </tr>
    @foreach (ViewBookViewModel book in Model.Books)
    {
        <tr>
            <td width="12%">@book.Title</td>
            <td width="12%">@book.Author</td>
            <td width="12%">@book.Publisher</td>
            <td width="12%">@book.PublicationDate</td>
            <td width="12%">@book.CategoryName</td>
            <td width="12%">@book.ISBN</td>
            <td width="12%">@book.AvailableCopies.ToString()</td>
            @if (int.Parse(book.AvailableCopies) < 1)
            {
                <td width="12%">Unavailable</td>
            }
            else
            {
                <td width="12%" onclick="location.href='@Url.ActionLink("ProcessLeaseBook", "Book", new {ISBN = book.ISBN})'">Lease</td>
            }
        </tr>
    }
</table>